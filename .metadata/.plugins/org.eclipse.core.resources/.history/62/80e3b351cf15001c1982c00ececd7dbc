package com.kh.chap2.sync;

public class Producer extends Thread {

	private Buffer buffer;
	
	public Producer() {
	}

	public Producer(Buffer buffer) {
		this.buffer = buffer;
	}

	@Override
	public void run() {

		try {
			for(int i = 1; i <= 10; i++) {
				buffer.setData(i);
				
					Thread.sleep(100);
			} 
		}catch (InterruptedException e) {
			e.printStackTrace();

		}
	}
	
}
